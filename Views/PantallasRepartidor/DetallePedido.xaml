                    </StackLayout>
                </ScrollView>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border
                        Grid.Column="0"
                        HeightRequest="50"
                        HorizontalOptions="End"
                        WidthRequest="50">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="50" />
                        </Border.StrokeShape>

                        <ImageButton
                            Clicked="make_phone_call_Clicked"
                            HeightRequest="50"
                            HorizontalOptions="End"
                            Source="ImagenesRepartidor/llamada_cliente.png" />
                    </Border>

                    <Border
                        Grid.Column="1"
                        Margin="10,0,0,0"
                        HeightRequest="50"
                        HorizontalOptions="Start"
                        WidthRequest="50">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="50" />
                        </Border.StrokeShape>

                        <ImageButton
                            Clicked="open_whatsapp_Clicked"
                            HeightRequest="50"
                            HorizontalOptions="End"
                            Source="ImagenesRepartidor/whastapp.png" />
                    </Border>

                </Grid>
                <Button
                    x:Name="btnAceptar"
                    Margin="20"
                    BackgroundColor="#00ADDC"
                    Clicked="start_order_Clicked"
                    CornerRadius="25"
                    FontAttributes="Bold"
                    FontSize="15"
                    Text="Iniciar pedido" />
            </StackLayout>
        </Border>
    </StackLayout>
</ContentPage>