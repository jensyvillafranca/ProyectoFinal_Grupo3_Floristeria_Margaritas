<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ProyectoFinal_Grupo3_Floristeria_Margaritas.Views.Home.homePageUser"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title=""
    BackgroundImageSource="fondo_todas_pantallas.png">

    <Grid>
        <!--  Content Grid  -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Scrollable Content  -->
        <ScrollView Grid.Row="0">
            <StackLayout>
                <!--  Header  -->
                <Frame
                    Margin="0,0,0,25"
                    Padding="0,10,0,10"
                    BackgroundColor="{DynamicResource BlackWithTransparency}"
                    BorderColor="{DynamicResource AzulBotones}"
                    CornerRadius="20">
                    <StackLayout
                        Margin="0,0,0,0"
                        Padding="0,0,0,0"
                        BackgroundColor="Transparent"
                        Orientation="Horizontal">
                        <ImageButton
                            x:Name="btnNotification"
                            Margin="10,0,0,0"
                            Aspect="AspectFit"
                            BackgroundColor="Transparent"
                            Clicked="btnNotification_Clicked"
                            HeightRequest="40"
                            Source="Home/notificacion.png"
                            WidthRequest="40" />
                        <!--  Spacer  -->
                        <BoxView BackgroundColor="Transparent" HorizontalOptions="FillAndExpand" />
                        <Image
                            Margin="0,0,10,0"
                            Aspect="AspectFit"
                            HeightRequest="50"
                            Source="Logo/logp.png"
                            WidthRequest="50" />
                        <Label
                            Margin="0,0,90,0"
                            FontAttributes="Bold"
                            Text="Floristeria Margaritas"
                            TextColor="White"
                            VerticalOptions="CenterAndExpand" />
                    </StackLayout>
                </Frame>


                <!--  Body: First Row  -->

                <!--  First Row: Productos and Carrito Frames  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Productos Frame  -->
                    <Frame
                        x:Name="frameProductos"
                        Margin="5"
                        Padding="5"
                        BackgroundColor="{DynamicResource AzulMedio}"
                        BorderColor="{DynamicResource AzulBotones}"
                        CornerRadius="10"
                        HasShadow="True"
                        HeightRequest="200"
                        HorizontalOptions="FillAndExpand">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer
                                x:Name="TapGestureProductos"
                                CommandParameter="Productos"
                                Tapped="TapGestureProductos_Tapped" />
                        </Frame.GestureRecognizers>
                        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                            <Image
                                Aspect="AspectFit"
                                HeightRequest="100"
                                Source="Home/flowercolor.png"
                                WidthRequest="100" />
                            <Label
                                FontAttributes="Bold"
                                FontSize="16"
                                HorizontalTextAlignment="Center"
                                Text="Productos"
                                TextColor="White" />
                        </StackLayout>
                    </Frame>

                    <!--  Carrito Frame  -->
                    <Frame
                        x:Name="frameCarrito"
                        Grid.Column="1"
                        Margin="5"
                        Padding="5"
                        BackgroundColor="{DynamicResource AzulOscuro}"
                        BorderColor="{DynamicResource AzulBotones}"
                        CornerRadius="10"
                        HasShadow="True"
                        HeightRequest="200"
                        HorizontalOptions="FillAndExpand">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer
                                x:Name="TapGestureCarrito"
                                CommandParameter="Carrito"
                                Tapped="TapGestureCarrito_Tapped" />
                        </Frame.GestureRecognizers>
                        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                            <Image
                                Aspect="AspectFit"
                                HeightRequest="100"
                                Source="Home/carritocolor.png"
                                WidthRequest="100" />
                            <Label
                                FontAttributes="Bold"
                                FontSize="16"
                                HorizontalTextAlignment="Center"
                                Text="Carrito"
                                TextColor="White" />
                        </StackLayout>
                    </Frame>
                </Grid>

                <StackLayout>
                    <!--  Label  -->
                    <Label
                        Margin="0,10,0,0"
                        FontAttributes="Bold"
                        FontSize="18"
                        HorizontalOptions="Center"
                        Text="Ofertas"
                        TextColor="Black"
                        VerticalOptions="Start" />

                    <!--  CarouselView  -->
                    <CarouselView
                        x:Name="carouselView"
                        Margin="0,0,0,20"
                        ItemsSource="{Binding TestItems}">
                        <CarouselView.ItemsLayout>
                            <LinearItemsLayout
                                ItemSpacing="0"
                                Orientation="Horizontal"
                                SnapPointsAlignment="Start"
                                SnapPointsType="Mandatory" />
                        </CarouselView.ItemsLayout>
                        <CarouselView.ItemTemplate>
                            <DataTemplate>
                                <Frame
                                    x:Name="frameCarousel"
                                    Margin="5"
                                    Padding="5"
                                    BackgroundColor="{DynamicResource AzulMedio}"
                                    BorderColor="{DynamicResource AzulBotones}"
                                    CornerRadius="10"
                                    HasShadow="True"
                                    HeightRequest="150">
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding TappedCommand}" />
                                    </Frame.GestureRecognizers>
                                    <StackLayout
                                        Margin="0,0,0,0"
                                        Padding="0,0,0,0"
                                        Orientation="Vertical">
                                        <Label
                                            Margin="0,0,0,10"
                                            FontAttributes="Bold"
                                            FontSize="13"
                                            HorizontalTextAlignment="Center"
                                            Text="{Binding LabelText}"
                                            TextColor="White" />
                                        <StackLayout
                                            Margin="0,5,0,5"
                                            HorizontalOptions="Center"
                                            Orientation="Horizontal"
                                            VerticalOptions="CenterAndExpand">
                                            <Image
                                                x:Name="imgProducto"
                                                Margin="0,0,30,10"
                                                Aspect="AspectFit"
                                                HeightRequest="100"
                                                HorizontalOptions="Start"
                                                Source="{Binding ImageSource}"
                                                WidthRequest="100" />
                                            <Label
                                                x:Name="labelDescuento"
                                                Margin="0,5,0,5"
                                                FontAttributes="Bold"
                                                FontSize="18"
                                                HorizontalOptions="CenterAndExpand"
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding LabelDescuento}"
                                                TextColor="{DynamicResource RojoDescuento}"
                                                VerticalOptions="CenterAndExpand"
                                                VerticalTextAlignment="Center" />
                                            <Image
                                                x:Name="imgDescuento"
                                                Margin="0,5,30,5"
                                                Aspect="AspectFit"
                                                HeightRequest="32"
                                                HorizontalOptions="Center"
                                                IsVisible="{Binding IsDescuentoImageVisible}"
                                                Source="Productos/descuentoproducto.png"
                                                VerticalOptions="Center"
                                                WidthRequest="32" />
                                            <Label
                                                x:Name="labelPrecioProducto"
                                                Margin="0,10,0,15"
                                                FontAttributes="Bold"
                                                FontSize="16"
                                                HorizontalOptions="CenterAndExpand"
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding LabelPrecio}"
                                                TextColor="White"
                                                VerticalOptions="CenterAndExpand"
                                                VerticalTextAlignment="Center" />
                                        </StackLayout>
                                    </StackLayout>

                                </Frame>
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>
                </StackLayout>

                <!--  Body: Third Row  -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Pedidos Frame  -->
                    <Frame
                        x:Name="framePedidos"
                        Margin="5"
                        Padding="5"
                        BackgroundColor="{DynamicResource AzulOscuro}"
                        BorderColor="{DynamicResource AzulBotones}"
                        CornerRadius="10"
                        HasShadow="True"
                        HeightRequest="200"
                        HorizontalOptions="FillAndExpand">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer
                                x:Name="TapGesturePedidos"
                                CommandParameter="Pedidos"
                                Tapped="TapGesturePedidos_Tapped" />
                        </Frame.GestureRecognizers>
                        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                            <Image
                                Aspect="AspectFit"
                                HeightRequest="100"
                                Source="Home/pedidoscolor.png"
                                WidthRequest="100" />
                            <Label
                                FontAttributes="Bold"
                                FontSize="16"
                                HorizontalTextAlignment="Center"
                                Text="Pedidos"
                                TextColor="White" />
                        </StackLayout>
                    </Frame>

                    <!--  Perfil Frame  -->
                    <Frame
                        x:Name="framePerfil"
                        Grid.Column="1"
                        Margin="5"
                        Padding="5"
                        BackgroundColor="{DynamicResource AzulMedio}"
                        BorderColor="{DynamicResource AzulBotones}"
                        CornerRadius="10"
                        HasShadow="True"
                        HeightRequest="200"
                        HorizontalOptions="FillAndExpand">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer
                                x:Name="TapGesturePerfil"
                                CommandParameter="Perfil"
                                Tapped="TapGesturePerfil_Tapped" />
                        </Frame.GestureRecognizers>
                        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                            <Image
                                Aspect="AspectFit"
                                HeightRequest="100"
                                Source="Home/perfilcolor.png"
                                WidthRequest="100" />
                            <Label
                                FontAttributes="Bold"
                                FontSize="16"
                                HorizontalTextAlignment="Center"
                                Text="Perfil"
                                TextColor="White" />
                        </StackLayout>
                    </Frame>
                </Grid>
            </StackLayout>
        </ScrollView>

        <!--  Bottom Navigation Bar  -->
        <Frame
            Grid.Row="1"
            Padding="0,10,0,10"
            BackgroundColor="{DynamicResource BlackWithTransparency}"
            BorderColor="{DynamicResource AzulBotones}"
            CornerRadius="20">
            <StackLayout
                Padding="0,0,0,0"
                BackgroundColor="Transparent"
                Orientation="Horizontal">

                <!--  Spacer to push the Button to the end  -->
                <BoxView BackgroundColor="Transparent" HorizontalOptions="FillAndExpand" />

                <!--  Logout Button at the end  -->
                <ImageButton
                    x:Name="btnLogout"
                    Margin="0,0,10,0"
                    Aspect="AspectFit"
                    BackgroundColor="Transparent"
                    Clicked="btnLogout_Clicked"
                    HeightRequest="40"
                    Source="ImagenesRepartidor/salirmenu.png"
                    WidthRequest="40" />
            </StackLayout>
        </Frame>

    </Grid>
</ContentPage>