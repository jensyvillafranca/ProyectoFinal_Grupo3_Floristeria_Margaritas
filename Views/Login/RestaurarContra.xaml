<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal_Grupo3_Floristeria_Margaritas.Views.Login.RestaurarContra"
             Title=""
             BackgroundImageSource="fondocodigoverificacion.png">

    <Grid>
        <!--  Content Grid  -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
   
            <StackLayout
                Grid.Row="0"
                Margin="0,0,0,0"
                Padding="0,20,0,0"
                BackgroundColor="Transparent"
                Orientation="Horizontal">
                <ImageButton
                    x:Name="btnBack"
                    Margin="12,0,0,0"
                    Aspect="AspectFit"
                    HeightRequest="35"
                    Source="atras.png"
                    WidthRequest="35"
                    Pressed="BtnBack_Pressed"
                    Released="BtnBack_Released"
                    Clicked="BtnBack_Clicked"/>
                
            </StackLayout>


        <!--  Body - Collection view  -->
        <ScrollView Grid.Row="1">
            <StackLayout
                Padding="10,10,0,0">
            
            <Label
                x:Name="labelRecuperarContra"
                Margin="0,60,0,0"
                FontAttributes="Bold"
                FontSize="20"
                HorizontalOptions="CenterAndExpand"
                HorizontalTextAlignment="Center"
                Text="Recuperar Contraseña"
                TextColor="White" />
            
            <Image
                Margin="0,30,0,0"
                Aspect="AspectFit"
                HeightRequest="150" 
                WidthRequest="150" 
                Source="ingresarnuevacontra.png"/>

             <!--  Ingrese nueva contraseña  -->
            <Label
                x:Name="labelTextNuevaContra"
                Margin="0,55,60,10"
                FontSize="18"
                VerticalOptions="Start"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                Text="Ingrese una nueva contraseña:"
                TextColor="White"/>


                <StackLayout>
                    <Frame
                        Margin="30,0,30,0"
                        Padding="0,0,0,0"
                        BackgroundColor="White"
                        CornerRadius="10">
                        <Entry
                            x:Name="entryIngreContra"
                            Margin="5,0,0,5"
                            BackgroundColor="Transparent"
                            FontAttributes="Bold"
                            FontSize="12"
                            HorizontalTextAlignment="Center"
                            IsPassword="True"
                            Placeholder=""
                            PlaceholderColor="Gray"
                            TextColor="Black" />
                    </Frame>
                </StackLayout>


                <!--  Confirmar nueva contraseña  -->
                <Label
                    x:Name="labelTextConfContra"
                    Margin="0,30,110,10"
                    FontSize="18"
                    VerticalOptions="Start"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    Text="Confirme su contraseña:"
                    TextColor="White"/>

                <StackLayout>
                    <Frame
                        Margin="30,0,30,0"
                        Padding="0,0,0,0"
                        BackgroundColor="White"
                        CornerRadius="10">
                          <Entry
                            x:Name="entryConfContra"
                            Margin="5,0,0,5"
                            BackgroundColor="Transparent"
                            FontAttributes="Bold"
                            FontSize="12"
                            HorizontalTextAlignment="Center"
                            IsPassword="True"
                            Placeholder=""
                            PlaceholderColor="Gray"
                            TextColor="Black" />
                    </Frame>
                </StackLayout>
                
            </StackLayout>

            </ScrollView>


        <!--  Boton Restaurar  -->

        <StackLayout
                Grid.Row="2"
                Padding="0,0,0,0"
                BackgroundColor="Transparent"
                Orientation="Vertical">

            <Button
                    x:Name="btnRestaurar"
                    BackgroundColor="{DynamicResource AzulBotones}"
                    Command="{Binding substractCommand}"
                    CommandParameter="{Binding .}"
                    FontAttributes="Bold"
                    FontSize="18"
                    Margin="0,0,0,70"
                    HeightRequest="40"
                    Text="Restaurar Contraseña"
                    CornerRadius="20"
                    WidthRequest="300"/>



        </StackLayout>


    </Grid>
</ContentPage>






