<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="ProyectoFinal_Grupo3_Floristeria_Margaritas.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProyectoFinal_Grupo3_Floristeria_Margaritas">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary>
                    <Style x:Key="CustomSwitchStyle" TargetType="Switch">
                        <Setter Property="WidthRequest" Value="60" />
                        <Setter Property="HeightRequest" Value="40" />
                        <Setter Property="ThumbColor" Value="Red" />
                        <Setter Property="ThumbColor" Value="LightGray" />
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
